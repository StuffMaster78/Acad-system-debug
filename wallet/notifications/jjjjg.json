{
  "schema": "wallet_event",
  "version": 1,
  "events": {
    "wallet.balance_low": {
      "event_key": "wallet.balance_low",
      "enabled": true,
      "priority": "high",
      "roles": ["client"],
      "channels": ["in_app", "email"],
      "forced_channels": [],
      "templates": {
        "in_app": "wallet.balance_low.in_app",
        "email": "wallet.balance_low.email"
      },
      "description": "Client balance dropped below the configured threshold.",
      "meta": {
        "threshold": 10
      }
    },

    "wallet.credit_added": {
      "event_key": "wallet.credit_added",
      "enabled": true,
      "priority": "medium",
      "roles": ["client"],
      "channels": ["in_app", "email"],
      "forced_channels": [],
      "templates": {
        "in_app": "wallet.credit_added.in_app",
        "email": "wallet.credit_added.email"
      },
      "description": "Funds were added to the wallet (top-up or adjustment)."
    },

    "wallet.debit_made": {
      "event_key": "wallet.debit_made",
      "enabled": true,
      "priority": "medium",
      "roles": ["client"],
      "channels": ["in_app", "email"],
      "forced_channels": [],
      "templates": {
        "in_app": "wallet.debit_made.in_app",
        "email": "wallet.debit_made.email"
      },
      "description": "A charge was made against the wallet balance."
    },

    "wallet.topup_failed": {
      "event_key": "wallet.topup_failed",
      "enabled": true,
      "priority": "high",
      "roles": ["client", "support"],
      "channels": ["in_app", "email"],
      "forced_channels": [],
      "templates": {
        "in_app": "wallet.topup_failed.in_app",
        "email": "wallet.topup_failed.email"
      },
      "description": "A clientâ€™s wallet top-up attempt failed."
    },

    "wallet.withdrawal_requested": {
      "event_key": "wallet.withdrawal_requested",
      "enabled": true,
      "priority": "medium",
      "roles": ["client", "support"],
      "channels": ["in_app", "email"],
      "forced_channels": [],
      "templates": {
        "in_app": "wallet.withdrawal_requested.in_app",
        "email": "wallet.withdrawal_requested.email"
      },
      "description": "Client requested a wallet withdrawal."
    },

    "wallet.withdrawal_processed": {
      "event_key": "wallet.withdrawal_processed",
      "enabled": true,
      "priority": "medium",
      "roles": ["client", "support"],
      "channels": ["in_app", "email"],
      "forced_channels": [],
      "templates": {
        "in_app": "wallet.withdrawal_processed.in_app",
        "email": "wallet.withdrawal_processed.email"
      },
      "description": "A wallet withdrawal has been processed/payout sent."
    }
  }
}
