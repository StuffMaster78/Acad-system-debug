{
  "name": "writing-system-frontend",
  "version": "1.0.0",
  "description": "Writing System Frontend Application",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:writers": "vite build --mode writers",
    "build:clients": "vite build --mode clients",
    "build:staff": "vite build --mode staff",
    "build:all": "npm run build:writers && npm run build:clients && npm run build:staff",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@vueuse/core": "^14.0.0",
    "apexcharts": "^5.3.6",
    "axios": "^1.13.1",
    "pinia": "^3.0.3",
    "quill": "^1.3.7",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "vue3-apexcharts": "^1.10.0",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.1",
    "jsdom": "^24.1.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "vite": "^7.1.7",
    "vitest": "^2.1.9"
  }
}
