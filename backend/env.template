# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_HOST=db
DB_PORT=5432
POSTGRES_USER_NAME=writing_system_user
POSTGRES_PASSWORD=your_db_password_here
POSTGRES_DB_NAME=writing_system_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Gmail SMTP Configuration (for test system)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password-here
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Frontend URLs (for multi-domain deployment)
FRONTEND_URL=http://localhost:5173
WRITER_FRONTEND_URL=https://writers.yourdomain.com
CLIENT_FRONTEND_URL=https://clients.yourdomain.com
STAFF_FRONTEND_URL=https://staff.yourdomain.com

# CORS Configuration (comma-separated)
CORS_ALLOWED_ORIGINS=https://writers.yourdomain.com,https://clients.yourdomain.com,https://staff.yourdomain.com,http://localhost:5173,http://localhost:3000

# Optional: Geolocation API
GEOLOCATION_API_KEY=

# Optional: File Storage (local, do_spaces, s3)
# For production with DigitalOcean Spaces, set to do_spaces
STORAGE_BACKEND=do_spaces

# DigitalOcean Spaces (S3-compatible) - used when STORAGE_BACKEND=do_spaces
# These map to the Django settings AWS_* and DO_SPACES_* used in writing_system/settings.py
AWS_ACCESS_KEY_ID=your_spaces_access_key
AWS_SECRET_ACCESS_KEY=your_spaces_secret_key
AWS_STORAGE_BUCKET_NAME=your_space_name
DO_SPACES_REGION=nyc3
DO_SPACES_CDN_ENDPOINT=your-space-name.nyc3.cdn.digitaloceanspaces.com

# Optional: AWS S3 (if using s3 instead of DigitalOcean)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_aws_bucket_name
