{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Base Event Config Schema",
  "type": "object",
  "properties": {
    "priority": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"]
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["client", "writer", "admin", "support", "superadmin", "editor"]
      }
    },
    "channels": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["email", "dashboard", "slack", "discord", "sms", "telegram", "whatsapp"]
      }
    },
    "forced_channels": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["email", "dashboard", "slack", "discord", "sms", "telegram", "whatsapp"]
      }
    },
    "enabled": {
      "type": "boolean"
    },
    "description": {
      "type": "string"
    }
  },
  "required": ["priority", "roles", "channels"],
  "additionalProperties": false
}