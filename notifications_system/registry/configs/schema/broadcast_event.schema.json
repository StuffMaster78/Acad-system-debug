{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Broadcast Event Schema",
  "type": "object",
  "required": ["event_key", "description", "scope", "default_channels"],
  "properties": {
    "event_key": {
      "type": "string",
      "description": "Unique identifier for the broadcast event"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the broadcast event"
    },
    "scope": {
      "type": "string",
      "enum": ["systemwide", "website"],
      "description": "Determines the fanout scope of the broadcast"
    },
    "default_channels": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["email", "sms", "in_app", "push"]
      },
      "description": "Default channels for delivery"
    },
    "forced_channels": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["email", "sms", "in_app", "push"]
      },
      "description": "Channels that override user preferences"
    },
    "filters": {
      "type": "object",
      "description": "Optional filters for targeted broadcast",
      "properties": {
        "roles": {
          "type": "array",
          "items": { "type": "string" }
        },
        "is_active": {
          "type": "boolean"
        },
        "custom_conditions": {
          "type": "object",
          "description": "Key-value pairs for custom filtering"
        }
      },
      "additionalProperties": false
    },
    "priority": {
      "type": "string",
      "enum": ["low", "normal", "high", "critical"],
      "default": "normal"
    },
    "force_send": {
      "type": "boolean",
      "description": "Whether to bypass all user preferences",
      "default": false
    }
  },
  "additionalProperties": false
}
