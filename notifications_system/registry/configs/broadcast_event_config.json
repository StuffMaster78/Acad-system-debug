{
  "$schema": "notifications/broadcast_event.schema.json",
  "events": {
    "broadcast.system_announcement": {
      "description": "System-wide announcement to all users",
      "scope": "systemwide",
      "default_channels": ["in_app", "email"],
      "forced_channels": ["in_app"],
      "priority": "high",
      "force_send": true
    },
    "broadcast.website_alert": {
      "description": "Website-specific maintenance alert",
      "scope": "website",
      "default_channels": ["email"],
      "filters": { "roles": ["client", "writer"] },
      "priority": "normal"
    },
    "broadcast.discount_code_alert": {
      "description": "Website-specific discount promo code",
      "scope": "website",
      "default_channels": ["in_app", "email"],
      "forced_channels": ["in_app"],
      "filters": { "roles": ["client"] },
      "priority": "normal"
    }
  }
}
