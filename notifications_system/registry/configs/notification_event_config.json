{
  "events": {
    "order.created": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "A new order has been created.",
      "enabled": true
    },
    "order.assigned": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email", "webhook"],
      "description": "Order assigned to a writer.",
      "enabled": true
    },
    "order.preferred_writer_assigned": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Assigned to client's preferred writer.",
      "enabled": true
    },
    "order.unpaid": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Order marked unpaid / invoice issued.",
      "enabled": true
    },
    "order.paid": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Payment received for the order.",
      "enabled": true
    },
    "order.payment_failed": {
      "priority": "high",
      "roles": ["client"],
      "channels": ["in_app", "email", "sms"],
      "description": "Payment attempt failed.",
      "enabled": true,
      "forced_channels": ["email"]
    },
    "order.available": {
      "priority": "low",
      "roles": ["writer"],
      "channels": ["in_app"],
      "description": "Order available for assignment.",
      "enabled": true
    },
    "order.in_progress": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Work on the order has started.",
      "enabled": true
    },
    "order.on_hold": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Order placed on hold.",
      "enabled": true
    },
    "order.off_hold": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Order taken off hold.",
      "enabled": true
    },
    "order.under_editing": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Order is under editing.",
      "enabled": true
    },
    "order.submitted": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Writer submitted files for review.",
      "enabled": true
    },
    "order.reviewed": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Submission reviewed by client/QA.",
      "enabled": true
    },
    "order.revision_requested": {
      "priority": "high",
      "roles": ["writer"],
      "channels": ["in_app", "email"],
      "description": "Client requested a revision.",
      "enabled": true
    },
    "order.revision_in_progress": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Writer started the revision.",
      "enabled": true
    },
    "order.revised": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Revised files submitted.",
      "enabled": true
    },
    "order.returned": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Submission returned outside revision flow.",
      "enabled": true
    },
    "order.rated": {
      "priority": "low",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Client rated the order.",
      "enabled": true
    },
    "order.approved": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Order approved by client/QA.",
      "enabled": true
    },
    "order.refunded": {
      "priority": "high",
      "roles": ["client"],
      "channels": ["in_app", "email"],
      "description": "Order refunded (full or partial).",
      "enabled": true
    },
    "order.cancelled": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Order cancelled.",
      "enabled": true
    },
    "order.cancellation_requested": {
      "priority": "medium",
      "roles": ["admin", "support"],
      "channels": ["in_app", "email"],
      "description": "Client requested cancellation.",
      "enabled": true
    },
    "order.archived": {
      "priority": "low",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Order archived for housekeeping.",
      "enabled": true
    },
    "order.unarchived": {
      "priority": "low",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Order restored from archive.",
      "enabled": true
    },
    "order.restored": {
      "priority": "low",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Explicit restore transition.",
      "enabled": true
    },
    "order.completed": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Order lifecycle completed.",
      "enabled": true
    },
    "order.closed": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Order closed by staff/policy.",
      "enabled": true
    },
    "order.reassigned": {
      "priority": "high",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "Order reassigned to a different writer.",
      "enabled": true
    },
    "order.expired": {
      "priority": "critical",
      "roles": ["client", "writer", "admin"],
      "channels": ["in_app", "email", "sms"],
      "description": "Deadline missed / SLA breach.",
      "enabled": true,
      "forced_channels": ["email"]
    },
    "order.updated": {
      "priority": "low",
      "roles": ["client", "writer"],
      "channels": ["in_app"],
      "description": "Order fields/metadata updated.",
      "enabled": true
    },
    "order.file_uploaded": {
      "priority": "medium",
      "roles": ["client", "writer"],
      "channels": ["in_app", "email"],
      "description": "A new file was uploaded to the order.",
      "enabled": true
    }
  }
}
