{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Wallet Notification Event",
  "allOf": [
    { "$ref": "./base_event.schema.json" },
    {
      "type": "object",
      "properties": {
        "wallet_action": {
          "type": "string",
          "enum": ["balance_low", "deposit", "withdrawal", "credited", "debited", "hold_placed", "hold_released"]
        },
        "amount": { "type": "number", "minimum": 0 }
      },
      "required": ["wallet_action"],
      "additionalProperties": true
    }
  ]
}
