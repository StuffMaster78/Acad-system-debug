{
  "$id": "https://your.app/schemas/order_event.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Order Notification Event",
  "allOf": [
    { "$ref": "./base_event.schema.json" },
    {
      "type": "object",
      "properties": {
        "order_status": {
          "type": "string",
          "enum": [
            "pending",
            "unpaid",
            "paid",
            "available",
            "in_progress",
            "on_hold",
            "submitted",
            "reviewed",
            "revision_requested",
            "revision_in_progress",
            "revised",
            "rated",
            "approved",
            "refunded",
            "cancelled",
            "archived",
            "completed",
            "reassigned",
            "expired"
          ]
        }
      },
      "required": ["order_status"],
      "additionalProperties": false
    }
  ]
}
