{
  "$id": "https://yourdomain.com/schemas/user_event.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User Event Schema (map item)",
  "description": "Validates values for user.* events when using map form.",
  "allOf": [
    { "$ref": "./base_event.schema.json" },
    {
      "type": "object",
      "properties": {
        "meta": {
          "type": "object",
          "additionalProperties": true
        },
        "template_key": { "type": "string" },
        "fallback_message": { "type": "string" }
      },
      "additionalProperties": false
    }
  ]
}
