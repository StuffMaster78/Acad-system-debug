{
  "$schema": "notifications/digest_event.schema.json",
  "events": {
    "user.activity_digest": {
      "title": "Your Weekly Activity Summary",
      "template": "emails/digests/activity_summary.html",
      "channels": ["email"],
      "interval": "weekly",
      "group_by": "user_id",
      "digest": { "merge_strategy": "list_append", "max_items": 20 }
    },
    "user.comment_digest": {
      "title": "Your Weekly Comment Summary",
      "template": "emails/digests/comment_summary.html",
      "channels": ["email"],
      "interval": "weekly",
      "group_by": "user_id",
      "digest": { "merge_strategy": "list_append", "max_items": 20 }
    },
    "user.orders_digest": {
      "title": "Your Weekly Orders Summary",
      "template": "emails/digests/orders_summary.html",
      "channels": ["email"],
      "interval": "weekly",
      "group_by": "user_id",
      "digest": { "merge_strategy": "list_append", "max_items": 20 }
    },
    "user.revisions_digest": {
      "title": "Your Weekly Revisions Summary",
      "template": "emails/digests/revisions_summary.html",
      "channels": ["email"],
      "interval": "weekly",
      "group_by": "user_id",
      "digest": { "merge_strategy": "list_append", "max_items": 20 }
    }
  }
}
